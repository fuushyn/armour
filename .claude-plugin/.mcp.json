{
  "mcpServers": {
    "armour": {
      "type": "stdio",
      "command": "${CLAUDE_PLUGIN_ROOT}/armour",
      "args": [
        "-mode", "stdio",
        "-config", "${HOME}/.armour/servers.json",
        "-log-level", "info"
      ],
      "env": {
        "ARMOUR_CONFIG": "${HOME}/.armour/servers.json",
        "ARMOUR_POLICY": "${ARMOUR_POLICY:-moderate}",
        "ARMOUR_DB": "${HOME}/.armour/audit.db"
      }
    }
  }
}
