{
  "name": "armour",
  "version": "1.0.18",
  "description": "Security-enhanced MCP proxy. Proxies all plugin MCP servers through a unified security layer. Block destructive tool calls, audit operations, and recover configs with /armour commands.",
  "author": {
    "name": "fuushyn",
    "url": "https://github.com/fuushyn"
  },
  "homepage": "https://github.com/fuushyn/armour",
  "repository": "https://github.com/fuushyn/armour",
  "license": "MIT",
  "keywords": [
    "mcp",
    "security",
    "proxy",
    "tools",
    "ai-safety",
    "gateway"
  ],
  "commands": [
    "./commands/backup.md",
    "./commands/recover.md",
    "./commands/status.md"
  ],
  "mcpServers": {
    "armour": {
      "type": "stdio",
      "command": "${CLAUDE_PLUGIN_ROOT}/armour",
      "args": ["-mode", "stdio", "-config", "${HOME}/.armour/servers.json"]
    }
  }
}
