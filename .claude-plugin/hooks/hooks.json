{
  "description": "Armour plugin hooks for dashboard startup and server sync",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/start-dashboard.sh"
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/sync-mcp-servers.sh"
          }
        ]
      }
    ]
  }
}
