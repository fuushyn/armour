{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "QUIET=1 PLUGIN_JSON=\"${CLAUDE_PLUGIN_ROOT}/.claude-plugin/plugin.json\" bash ${CLAUDE_PLUGIN_ROOT}/scripts/update-plugin-servers.sh",
            "description": "Update Armour's plugin.json with any newly installed plugins"
          }
        ]
      }
    ]
  }
}
